<div class="container">
    <%= form_for(@review) do |f| %>
      <h3>
        投稿する
      </h3>
      <div class="field">
        <%= f.label :"企業名" %><br />
        <%= f.text_field :firm, autofocus: true, name: :firm %>
      </div>
      
      <div class="field">
        <%= f.label :"レビュー" %><br />
        <%= f.text_area :review, name: :review %>
      </div>
        <%= f.submit "投稿", class: "btn btn-primary" %>
    <% end %>
  </div>