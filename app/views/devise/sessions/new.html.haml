%h2 ログイン
= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .form-inputs
    = f.input :email, label: "メールアドレス", required: false, autofocus: true, input_html: { autocomplete: "email" }
    = f.input :password, label: "パスワード", required: false, input_html: { autocomplete: "current-password" }
    = f.input :remember_me, label: "パスワードを記憶する", as: :boolean if devise_mapping.rememberable?
  .form-actions
    = f.button :submit, "ログイン", class: "btn btn-primary"
= render "devise/shared/links"
