%h2 新規登録
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = f.error_notification
  .form-inputs
    = f.input :name, label: "名前", required: true, autofocus: true, input_html: { autocomplete: "name" }
    = f.input :email, label: "メールアドレス", required: true, input_html: { autocomplete: "email" }
    = f.input :password, label: "パスワード", required: true, hint: ("#{@minimum_password_length}文字以上" if @minimum_password_length), input_html: { autocomplete: "new-password" }
    = f.input :password_confirmation, label: "パスワードの確認", required: true, input_html: { autocomplete: "new-password" }
  .form-actions
    = f.button :submit, "登録する",class: "btn btn-primary"
= render "devise/shared/links"
