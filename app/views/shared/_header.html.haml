#header
  #left_space
  #center_space
    = link_to root_path do
      %h1= image_tag "logo.png"
  #right_space
    .user_info
    - if user_signed_in?
      = link_to "#{current_user.name}詳細へ", user_path(current_user)
      = link_to "マイレビュー一覧", my_pages_reviews_path
    .search_company
      = search_form_for @q do |f|
        .form_group
          = f.text_field :name_cont, class: "form-control", placeholder: "気になる企業を検索"
        .actions
          = f.submit "検索"